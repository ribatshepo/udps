# UDPS Development Environment Configuration
# Copy to .env and adjust values as needed

# PostgreSQL - Metadata Catalog (used by docker-compose)
POSTGRES_PASSWORD=udps_dev_pass
POSTGRES_DB=udps_catalog
POSTGRES_USER=udps
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# PostgreSQL - Application config (used by application.conf)
UDPS_DB_HOST=localhost
UDPS_DB_PORT=5432
UDPS_DB_NAME=udps_catalog
UDPS_DB_USER=udps
UDPS_DB_PASSWORD=udps_dev_pass

# MinIO - S3-compatible Archive Tier (used by docker-compose)
MINIO_ROOT_USER=udps_minio
MINIO_ROOT_PASSWORD=udps_minio_pass
MINIO_ENDPOINT=http://localhost:9000
MINIO_CONSOLE_URL=http://localhost:9001

# MinIO - Application config (used by application.conf)
UDPS_MINIO_ENDPOINT=http://localhost:9000
UDPS_MINIO_ACCESS_KEY=udps_minio
UDPS_MINIO_SECRET_KEY=udps_minio_pass

# Redis - Distributed Cache
REDIS_HOST=localhost
REDIS_PORT=6379
UDPS_REDIS_HOST=localhost
UDPS_REDIS_PORT=6379

# Kafka - Streaming
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_INTERNAL_BOOTSTRAP_SERVERS=kafka:29092
UDPS_KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Jaeger - Tracing
JAEGER_UI_URL=http://localhost:16686
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
UDPS_TRACING_ENDPOINT=http://localhost:4317

# Zookeeper
ZOOKEEPER_HOST=localhost
ZOOKEEPER_PORT=2181

# TLS - Disabled for local development
UDPS_TLS_ENABLED=false
