# UDPS Development Environment Configuration
# Copy to .env and adjust values as needed

# PostgreSQL - Metadata Catalog
POSTGRES_PASSWORD=udps_dev_pass
POSTGRES_DB=udps_catalog
POSTGRES_USER=udps
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# MinIO - S3-compatible Archive Tier
MINIO_ROOT_USER=udps_minio
MINIO_ROOT_PASSWORD=udps_minio_pass
MINIO_ENDPOINT=http://localhost:9000
MINIO_CONSOLE_URL=http://localhost:9001

# Redis - Distributed Cache
REDIS_HOST=localhost
REDIS_PORT=6379

# Kafka - Streaming
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_INTERNAL_BOOTSTRAP_SERVERS=kafka:29092

# Jaeger - Tracing
JAEGER_UI_URL=http://localhost:16686
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Zookeeper
ZOOKEEPER_HOST=localhost
ZOOKEEPER_PORT=2181
