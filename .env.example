# ==============================================================================
# UDPS Environment Variables
# ==============================================================================
# Copy this file to .env and fill in all values.
# Variables marked [REQUIRED] have no defaults in application.conf and the
# application will fail to start without them.
# Variables marked [OPTIONAL] have sensible defaults in application.conf.
# ==============================================================================

# ------------------------------------------------------------------------------
# PostgreSQL - Metadata Catalog
# ------------------------------------------------------------------------------
# [REQUIRED] Database host (no default - must be explicitly set)
UDPS_DB_HOST=

# [OPTIONAL] Database port (default: 5432)
UDPS_DB_PORT=5432

# [REQUIRED] Database name (no default - must be explicitly set)
UDPS_DB_NAME=

# [REQUIRED] Database user (no default - must be explicitly set)
UDPS_DB_USER=

# [REQUIRED] Database password (no default - must be explicitly set)
UDPS_DB_PASSWORD=

# [OPTIONAL] Connection pool size (default: 20)
UDPS_DB_MAX_POOL_SIZE=20

# Docker-compose PostgreSQL variables (used by postgres container)
POSTGRES_PASSWORD=
POSTGRES_DB=
POSTGRES_USER=

# ------------------------------------------------------------------------------
# MinIO - S3-compatible Object Storage (Archive Tier)
# ------------------------------------------------------------------------------
# [REQUIRED] MinIO endpoint URL (no default - must be explicitly set)
UDPS_MINIO_ENDPOINT=

# [REQUIRED] MinIO access key (no default - must be explicitly set)
UDPS_MINIO_ACCESS_KEY=

# [REQUIRED] MinIO secret key (no default - must be explicitly set)
UDPS_MINIO_SECRET_KEY=

# [OPTIONAL] MinIO bucket name (default: udps-archive)
UDPS_MINIO_BUCKET=udps-archive

# Docker-compose MinIO variables (used by minio container)
MINIO_ROOT_USER=
MINIO_ROOT_PASSWORD=

# ------------------------------------------------------------------------------
# Kafka - Event Streaming
# ------------------------------------------------------------------------------
# [REQUIRED] Kafka bootstrap servers (no default - must be explicitly set)
UDPS_KAFKA_BOOTSTRAP_SERVERS=

# [OPTIONAL] Kafka consumer group ID (default: udps-consumer-group)
UDPS_KAFKA_GROUP_ID=udps-consumer-group

# ------------------------------------------------------------------------------
# Redis - Distributed Cache
# ------------------------------------------------------------------------------
# [REQUIRED] Redis host (no default - must be explicitly set)
UDPS_REDIS_HOST=

# [OPTIONAL] Redis port (default: 6379)
UDPS_REDIS_PORT=6379

# ------------------------------------------------------------------------------
# Tracing - OpenTelemetry / Jaeger
# ------------------------------------------------------------------------------
# [REQUIRED] OTLP collector endpoint (no default - must be explicitly set)
UDPS_TRACING_ENDPOINT=

# ------------------------------------------------------------------------------
# TLS Configuration
# ------------------------------------------------------------------------------
# [OPTIONAL] Enable TLS (default: true -- set to false only for local dev)
UDPS_TLS_ENABLED=true

# [OPTIONAL] TLS certificate paths (defaults: /etc/udps/tls/tls.crt, tls.key, ca.crt)
UDPS_TLS_CERT_PATH=/etc/udps/tls/tls.crt
UDPS_TLS_KEY_PATH=/etc/udps/tls/tls.key
UDPS_TLS_CA_PATH=/etc/udps/tls/ca.crt

# ------------------------------------------------------------------------------
# gRPC Server
# ------------------------------------------------------------------------------
# [OPTIONAL] gRPC bind host (default: 0.0.0.0)
UDPS_GRPC_HOST=0.0.0.0

# [OPTIONAL] gRPC port (default: 50060)
UDPS_GRPC_PORT=50060

# ------------------------------------------------------------------------------
# HTTPS Server
# ------------------------------------------------------------------------------
# [OPTIONAL] HTTPS bind host (default: 0.0.0.0)
UDPS_HTTPS_HOST=0.0.0.0

# [OPTIONAL] HTTPS port (default: 8443)
UDPS_HTTPS_PORT=8443

# ------------------------------------------------------------------------------
# Metrics Server
# ------------------------------------------------------------------------------
# [OPTIONAL] Metrics bind host (default: 0.0.0.0)
UDPS_METRICS_HOST=0.0.0.0

# [OPTIONAL] Metrics port (default: 9090)
UDPS_METRICS_PORT=9090

# ------------------------------------------------------------------------------
# Health Check Server
# ------------------------------------------------------------------------------
# [OPTIONAL] Health check bind host (default: 0.0.0.0)
UDPS_HEALTH_HOST=0.0.0.0

# [OPTIONAL] Health check port (default: 8081)
UDPS_HEALTH_PORT=8081

# ------------------------------------------------------------------------------
# Storage Tier Paths
# ------------------------------------------------------------------------------
# [OPTIONAL] Hot storage path (default: /data/udps/hot)
UDPS_STORAGE_HOT_PATH=/data/udps/hot

# [OPTIONAL] Warm storage path (default: /data/udps/warm)
UDPS_STORAGE_WARM_PATH=/data/udps/warm

# [OPTIONAL] Cold storage path (default: /data/udps/cold)
UDPS_STORAGE_COLD_PATH=/data/udps/cold

# [OPTIONAL] Default compression codec (default: zstd)
UDPS_DEFAULT_COMPRESSION=zstd

# [OPTIONAL] Storage worker threads (default: 8)
UDPS_STORAGE_WORKER_THREADS=8

# ------------------------------------------------------------------------------
# Query Engine
# ------------------------------------------------------------------------------
# [OPTIONAL] Max concurrent queries (default: 100)
UDPS_MAX_CONCURRENT_QUERIES=100

# [OPTIONAL] Query cache size (default: 10000)
UDPS_QUERY_CACHE_SIZE=10000
